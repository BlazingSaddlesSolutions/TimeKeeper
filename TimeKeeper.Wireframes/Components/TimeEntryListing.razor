<MudTable Items="@SampleTimeEntries" Dense="false" Hover="true" Bordered="false" Striped="true" SortLabel="Sort by">
    <HeaderContent>
        <MudTh>Client</MudTh>
        <MudTh>Category</MudTh>
        <MudTh>Note</MudTh>
        <MudTh>Hours</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Client">@context.Client</MudTd>
        <MudTd DataLabel="Category">@context.Category</MudTd>
        <MudTd DataLabel="Note">@context.Note</MudTd>
        <MudTd DataLabel="Hours">@context.Hours.ToString("0.00")</MudTd>
        <MudTd DataLabel="Actions">
            @if (context.Running)
            {
                <MudFab Color="Color.Success" Icon="@Icons.Material.Filled.Timer" Size="Size.Small" IconSize="Size.Small" Class="ma-2" />
            }
            else
            {
                <MudFab Icon="@Icons.Material.Filled.Timer" Size="Size.Small" IconSize="Size.Small" Class="ma-2" />
            }
            <MudFab Icon="@Icons.Material.Filled.Edit" Size="Size.Small" IconSize="Size.Small" Class="ma-2" />
            <MudFab Icon="@Icons.Material.Filled.Delete" Size="Size.Small" IconSize="Size.Small" Class="ma-2" />
        </MudTd>
    </RowTemplate>
    <FooterContent>
        <MudTd></MudTd>
        <MudTd></MudTd>
        <MudTd Style="text-align: right;"><strong>Total</strong></MudTd>
        <MudTd><strong>7.00</strong></MudTd>
        <MudTd></MudTd>
    </FooterContent>
</MudTable>

@code {

    public record SampleTimeEntry(string Client, string Category, string Note, decimal Hours, bool Running);

    protected List<SampleTimeEntry> SampleTimeEntries { get; set; } = new();

    protected override void OnInitialized()
    {
        SampleTimeEntries.Add(new("Microsoft", "Meeting", "", 2.5M, false));
        SampleTimeEntries.Add(new("Google", "Meeting", "Discuss billing", 3, false));
        SampleTimeEntries.Add(new("YouTube", "Meeting", "Introduction", 2, false));
        SampleTimeEntries.Add(new("Facebook", "Other", "Reviewing notes", 2.5M, false));
        //SampleTimeEntries.Add(new("Twitter", "Call", "Zoom", 3, false));
        //SampleTimeEntries.Add(new("Dropbox", "Other", "", 2, false));
        //SampleTimeEntries.Add(new("Oracle", "Documentation", "Contract", 2.5M, false));
        //SampleTimeEntries.Add(new("Blazing Solutions", "Meeting", "", 3, false));
        SampleTimeEntries.Add(new("Sony", "Call", "Evening meeting", 2, true));
    }

}
