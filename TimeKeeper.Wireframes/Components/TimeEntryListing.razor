    {
        SampleTimeEntries.Add(new("Microsoft", "Meeting", "", 2.5M));
        SampleTimeEntries.Add(new("Google", "Meeting", "Discuss billing", 3));
        SampleTimeEntries.Add(new("YouTube", "Meeting", "Introduction", 2));
        SampleTimeEntries.Add(new("Facebook", "Other", "Reviewing notes", 2.5M));
        SampleTimeEntries.Add(new("Twitter", "Call", "Zoom", 3));
        SampleTimeEntries.Add(new("Dropbox", "Other", "", 2));
        SampleTimeEntries.Add(new("Oracle", "Documentation", "Contract", 2.5M));
        SampleTimeEntries.Add(new("Blazing Solutions", "Meeting", "", 3));
        SampleTimeEntries.Add(new("Sony", "Call", "Evening meeting", 2));
    }

}
