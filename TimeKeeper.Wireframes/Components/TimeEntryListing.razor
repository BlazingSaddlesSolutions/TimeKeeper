<MudTable Items="@SampleTimeEntries.Take(new Random().Next(2, SampleTimeEntries.Count))" Dense="false" Hover="true" Bordered="false" Striped="true" SortLabel="Sort by">    
    <HeaderContent>
        <MudTh>Client</MudTh>
        <MudTh>Category</MudTh>
        <MudTh>Note</MudTh>
        <MudTh>Hours</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Client">@context.Client</MudTd>
        <MudTd DataLabel="Category">@context.Category</MudTd>
        <MudTd DataLabel="Note">@context.Note</MudTd>
        <MudTd DataLabel="Hours">@context.Hours</MudTd>
        <MudTd DataLabel="Actions">
            <MudIconButton Icon="@Icons.Material.Filled.Edit"></MudIconButton>
            <MudIconButton Icon="@Icons.Material.Filled.Delete"></MudIconButton>
        </MudTd>
    </RowTemplate>
    <FooterContent>
        <MudTd></MudTd>
        <MudTd></MudTd>
        <MudTd Style="text-align: right;"><strong>Total</strong></MudTd>
        <MudTd><strong>7.0</strong></MudTd>
        <MudTd></MudTd>
    </FooterContent>
</MudTable>

