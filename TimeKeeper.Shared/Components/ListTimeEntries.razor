<MudItem xs="12" xl="6" Class="mt-6 mb-12">

    @if (TimeEntries is not null)
    {
        <MudTable Items="@TimeEntries" Dense="false" Hover="true" Bordered="false" Striped="true" SortLabel="Sort by">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Time log for @SelectedDate.ToShortDateString()</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Client</MudTh>
                <MudTh>Category</MudTh>
                <MudTh>Note</MudTh>
                <MudTh>Hours</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Client">@GetClientName(context.Client)</MudTd>
                <MudTd DataLabel="Category">@GetCategoryName(context.Category)</MudTd>
                <MudTd DataLabel="Note">@context.Notes</MudTd>
                <MudTd DataLabel="Hours">@context.Hours</MudTd>
                <MudTd DataLabel="Actions">                    
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => Delete(context.Id))"></MudIconButton>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager/>
            </PagerContent>
        </MudTable>
    }

</MudItem>